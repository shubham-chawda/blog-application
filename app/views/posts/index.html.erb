<h1>Listing Posts</h1>
<table class="table" >
  <tr>
    <th>Title</th>
    <th>Details</th>
    <th>Author Name</th>
    <th colspan="3"></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.details %></td>
      <td><%= post.user.name %></td>
      <td><%= link_to 'Show', post_path(post), class: "btn btn-primary" %></td>

      <% if post.user == current_user && !post.publish %>
      <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-success" %></td>
      <td><%= link_to 'Destroy', post_path(post), class: "btn btn-danger",
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<%= link_to 'New post', new_post_path, class: "btn btn-primary" %>
